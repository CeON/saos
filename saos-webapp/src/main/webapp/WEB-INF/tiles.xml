<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN" "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>
    
    <!-- ************* Main template definition -->
    <definition name="template" template="/WEB-INF/view/template/mainTemplate.jsp">
   	    <put-attribute name="title" value="" type="string" />
        <put-attribute name="skipLinks" value="skipLinksTemplate"  />
        <put-attribute name="header" value="/WEB-INF/view/template/header.jsp" />
        <put-attribute name="content" value="" />
        <put-attribute name="footer" value="/WEB-INF/view/template/footer.jsp" />
    </definition>
    
    <!-- ************* Simple template definition -->
    <definition name="simpleTemplate" template="/WEB-INF/view/template/simpleTemplate.jsp">
        
    </definition>
    
    <!--   Layout development -->

	   	<!--  Angular TEST  -->    
		<definition name="angular" template="/WEB-INF/view/angular/homePage.jsp">
	        <put-attribute name="top" value="/WEB-INF/view/angular/header.jsp" />
	        <put-attribute name="navigation" value="/WEB-INF/view/angular/navigation.jsp" />
	        <put-attribute name="footer" value="/WEB-INF/view/angular/footer.jsp" />
	    </definition>
	    
	    <definition name="angularSearch" extends="angular">
	        <put-attribute name="content" value="/WEB-INF/view/angular/search.jsp" />
	    </definition>


    <!-- ************* General  -->
    
    <definition name="home" extends="template">
        <put-attribute name="content" value="/WEB-INF/view/home/home.jsp" />
        <put-attribute name="skipLinks" value="skipLinksSimple" />
        <put-attribute name="title" value="pageTitle.home" type="string" />
    </definition>
    
    <definition name="judgmentSearch" extends="template">
        <put-attribute name="content" value="/WEB-INF/view/judgment/judgmentSearch.jsp" />
        <put-attribute name="skipLinks" value="skipLinksJudgmentSearch" />
        <put-attribute name="title" value="pageTitle.judgmentSearch" type="string" />
    </definition>
    
    <definition name="judgmentDetails" extends="template">
        <put-attribute name="content" value="/WEB-INF/view/judgment/judgmentDetails.jsp" />
        <put-attribute name="skipLinks" value="skipLinksJudgmentDetails" />
        <put-attribute name="title" value="pageTitle.judgmentDetails" type="string" />
    </definition>
        
    <definition name="siteMap" extends="template">
        <put-attribute name="content" value="/WEB-INF/view/home/siteMap.jsp" />
        <put-attribute name="skipLinks" value="skipLinksSimple" />
        <put-attribute name="title" value="pageTitle.siteMap" type="string" />
    </definition>
    
    <!-- ************** SkipLinks -->
    
    <definition name="skipLinksTemplate" template="/WEB-INF/view/template/skipLinks/skipLinksTemplate.jsp">
    	<put-attribute name="skipLinksContent" value="" />
    </definition>
    
    <definition name="skipLinksSimple" extends="skipLinksTemplate">
    	<put-attribute name="skipLinksContent" value="/WEB-INF/view/template/skipLinks/skipLinksSimple.jsp" />
    </definition>
    
    <definition name="skipLinksJudgmentSearch" extends="skipLinksTemplate">
    	<put-attribute name="skipLinksContent" value="/WEB-INF/view/template/skipLinks/skipLinksJudgmentSearch.jsp" />
    </definition>
    
    <definition name="skipLinksJudgmentDetails" extends="skipLinksTemplate">
    	<put-attribute name="skipLinksContent" value="/WEB-INF/view/template/skipLinks/skipLinksJudgmentDetails.jsp" />
    </definition>
    
    <!-- ************** Errors -->
    
    <definition name="error404" extends="simpleTemplate">
        <put-attribute name="content" value="/WEB-INF/view/error/error404.jsp" />
    </definition>
    
    <definition name="error500" extends="simpleTemplate">
        <put-attribute name="content" value="/WEB-INF/view/error/error500.jsp" />
    </definition>
    
    
</tiles-definitions>
